<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Style Sheets -->
    <link rel="stylesheet" href="../css_files/general.css"> 
    <link rel="stylesheet" href="../css_files/opportunties.css">
    <link rel="stylesheet" href="../css_files/components.css"> 
    <link rel="stylesheet" href="../css_files/myDatepicker.css">

    <!-- Font Awesome 6-->
    <script src="https://kit.fontawesome.com/30087e3184.js" crossorigin="anonymous"></script>

    <!-- Scripts -->
    <script src="../js_files/opportunities.js"></script>
    <script src="../js_files/slider.js"></script>
    <script src="../js_files/dropdown.js"></script>
    <script src="../js_files/general.js"></script>
    <script src="../js_files/logout.js"></script>
    <script src="../js_files/myDatepicker.js"></script>


    <!-- Page Title -->
    <title>Hands On Deck - Oppourtunties</title>

  </head>

  <body onload="init()">

    <!--Add navigation bar-->
    <%- include ("../partials/nav.ejs") %>

    <div class="pageContainer">

        <!-- View all opportunities -- Initial screen for opportunities page -->
        <div id="opportunitiesMainPage">
            <div class="addOppButton">
            <button class="button" id="addOpportunityButton">Add Opportunity</button>
            </div>

            <div class="searchOpportunity paddingTop5">
                <input class="textInput" placeholder="Search" id="searchOpportunities">
            </div>

            <div class="sortOpportunity">
                <div class="sliderLabel" id="oppTimeFrameLabel">Present</div>
                <div class="sliderContainer sliderWidth">
                    <input type="range" min="0" max="2" value="1" class="slider" id="oppTimeFrame">
                </div>
            </div>

            <div id="oppourtuntiesTableDiv" class="table"> 
                <span class="table-title">Opportunities:</span>
                <table id="oppourtuntiesTable"> 
                    <tr>
                        <th class="width30">Title</th>
                        <th class="width20">Type</th>
                        <th class="width15">Number of Volunteers</th>
                        <th class="width15">Date</th> 
                        <th class="width10">Time</th> 
                        <th class="width5">View</th>
                        <th class="width5">Delete</th> 
                    </tr>
                </table>
            </div>
        </div>

        <!-- View Oppourtunity Page -- Shown when user clicks to view a specific oppourtunity-->
        <div id="viewOpportunityPage" style="display:none">
            <div class="paddingBottom25" style="height:70px"> 
                <div class="col_50p row_100p paddingLeft25">
                    <button id="returnToOppListButt" class="button width25">Return</button>
                </div>
                <div class="col_50p row_100p">
                    <button id="editOpportunity" class="button width25">Edit</button>
                </div>
            </div>
            
            <div id="viewOpportunityInformation" style="height:500px">
                <div class="row_20p">
                    <div class="col_33p">
                        <div class="row_33p paddingLeft10 subTitle3">Title</div>
                        <div class="row_66p padding-8">
                            <input class="textInput" type="text" placeholder="Opportunity Title" id="viewOpportunity-title" readonly>
                        </div>
                    </div>
                    <div class="col_33p">
                        <div class="row_33p paddingLeft10 subTitle3">Start</div>
                        <div class="row_66p padding-8">
                            <input class="textInput" type="time" placeholder="Start Time" id="viewOpportunity-startTime" readonly>
                        </div>
                    </div>
                    <div class="col_33p">
                        <div class="row_33p paddingLeft10 subTitle3">End</div>
                        <div class="row_66p padding-8">
                            <input class="textInput" type="time" placeholder="End Time" id="viewOpportunity-endTime" readonly>
                        </div>
                    </div>
                </div>
                <div class="row_20p">
                    <div class="col_33p">
                        <div class="row_33p paddingLeft10 subTitle3">Type</div>
                        <div class="row_66p padding-8">
                            <div class="dropdown">
                                <button id="viewOpportunityType" class="dropdown-button"><span id="dropdown-title-viewOpportunityType">Type</span><i class="fa fa-angle-right" id="dropdown-arrow-viewOpportunityType"></i></button>
                                <div id="viewOpportunityTypeOptions" class="dropdown-content">
                                  <!--Will dynmaically add options here-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col_33p">
                        <div class="row_33p paddingLeft10 subTitle3">Volunteer Limit</div>
                        <div class="row_66p padding-8">
                            <div class="dropdown">
                                <button id="viewOpportunityVolLimit" class="dropdown-button"><span id="dropdown-title-viewOpportunityVolLimit">Volunteer Limit</span><i class="fa fa-angle-right" id="dropdown-arrow-viewOpportunityVolLimit"></i></button>
                                <div id="viewOpportunityVolLimitOptions" class="dropdown-content">
                                  <!--Will dynmaically add options here-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col_33p">
                        <div class="row_33p paddingLeft10 subTitle3">Viewable By:</div>
                        <div class="row_66p padding-8">
                            <div class="dropdown">
                                <button id="viewOpportunityViewableBy" class="dropdown-button"><span id="dropdown-title-viewOpportunityViewableBy">Viewable By</span><i class="fa fa-angle-right" id="dropdown-arrow-viewOpportunityViewableBy"></i></button>
                                <div id="viewOpportunityViewableByOptions" class="dropdown-content">
                                  <!--Will dynmaically add options here-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row_60p">
                    <div class="col_50p row_100p">
                        <div class="row_30p">
                            <div class="row_33p paddingLeft10 subTitle3">Location</div>
                            <div class="row_66p padding-8">
                                <input class="textInput" type="text" placeholder="Location" id="viewOpportunity-location" readonly>
                            </div>
                        </div>
                        <div class="row_70p">
                            <div class="row_15p paddingLeft10 subTitle3">Description</div>
                            <div class="row_85p padding-8">
                                <textarea class="textArea" rows="8" type="text" placeholder="Description" id="viewOpportunity-description" readonly></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col_50p row_100p">
                        <div class="row_10p subTitle3_black">Coordinator Information:</div>
                        <div class="row_30p">
                            <div class="row_33p paddingLeft10 subTitle3">Name</div>
                            <div class="row_66p padding-8">
                                <input class="textInput" type="text" placeholder="Name" id="viewOpportunity-coordinatorName" readonly>
                            </div>
                        </div>
                        <div class="row_30p">
                            <div class="row_33p paddingLeft10 subTitle3">Email</div>
                            <div class="row_66p padding-8">
                                <input class="textInput" type="email" placeholder="Email" id="viewOpportunity-coordinatorEmail" readonly>
                            </div>
                        </div>
                        <div class="row_30p">
                            <div class="row_33p paddingLeft10 subTitle3">Phone Number</div>
                            <div class="row_66p padding-8">
                                <input class="textInput" type="tel" placeholder="Phone Number" id="viewOpportunity-coordinatorPhone" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                
            <div id="viewVolunteersForOpportunityTableDiv" class="table paddingTop10"> 
                <span class="table-title">Volunteers:</span>
                <table id="viewVolunteersForOpportunityTable"> 
                    <tr>
                        <th class="width25">Name</th>
                        <th class="width25">Email</th>
                        <th class="width25">Team</th>
                        <th class="width20">Hours</th> 
                        <th class="width5">View</th> 
                    </tr>
                </table>
            </div>

        </div>


        <!-- Pop up box for adding opportunities -->
        <div id="addOpportunityPopup" class="popup-greyOut" style="display:none">
          <div class="popup-box">
              <div class="popup-title" >
                  <h1>Add Opportunity</h1>
              </div>
              <div class="popup-content" style="height:425px">
                  
                <div class="col_50p row_100p">
                    <div class="row_17_5p">
                        <div class="col_25p subTitle3"> Title:</div>
                        <div class="col_75p"> 
                            <input class="textInput" type="text" placeholder="Title" id="addOpportunity-title">
                        </div>
                    </div>
                    <div class="row_17_5p">
                        <div class="col_25p subTitle3"> Date:</div>
                        <div class="col_75p"> 
                            <input class="textInput" type="text" placeholder="YYYY-MM-DD" id="addOpportunity-date">
                            <div id="addOpportunityDatePicker" class="hideDP" style="z-index:10"></div>
                        </div>
                    </div>
                    <div class="row_17_5p">
                        <div class="col_25p subTitle3"> Time:</div>
                        <div class="col_37p">
                            <input class="textInput" type="text" placeholder="Start Time" id="addOpportunity-startTime">
                        </div>
                        <div class="col_37p">
                            <input class="textInput" type="text" placeholder="End Time" id="addOpportunity-endTime">
                        </div>
                    </div>
                    <div class="row_17_5p">
                        <div class="col_25p subTitle3"> Date:</div>
                        <div class="col_75p"> 
                            <input class="textInput" type="text" placeholder="Location" id="addOpportunity-location">
                        </div>
                    </div>
                    <div class="row_30p">
                        <div class="col_25p subTitle3"> Description:</div>
                        <div class="col_75p"> 
                            <textarea class="textArea" rows="5" type="text" placeholder="Description" id="addOpportunity-description"></textarea>
                        </div>
                    </div>
                </div>

                <div class="col_50p row_100p">
                    <div class="row_17_5p">
                        <div class="col_33p subTitle3"> Viewable By:</div>
                        <div class="col_66p"> 
                            <div class="dropdown">
                                <button id="addOpportunityViewableBy" class="dropdown-button"><span id="dropdown-title-addOpportunityViewableBy">  All Teams</span><i class="fa fa-angle-right" id="dropdown-arrow-addOpportunityViewableBy"></i></button>
                                <div id="addOpportunityViewableByOptions" class="dropdown-content">
                                    <!--Will dynmaically add options here-->
                                    <a id="addOpportunityViewableByOptions_option_0" class="dropdown-option">All Teams</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row_17_5p">
                        <div class="col_33p subTitle3"> Volunteer Limit:</div>
                        <div class="col_66p"> 
                            <div class="sliderContainer sliderWidth">
                                <input type="range" min="0" max="15" value="15" class="slider" id="addOpportunityVolunteerLimit">
                            </div>
                            <div class="sliderLabel marginLeft5" id="addOpportunityVolunteerLimitLabel">No Limt</div>
                        </div>
                    </div>
                    <div class="row_17_5p">
                        <div class="col_25p subTitle3"> Type:</div>
                        <div class="col_75p"> 
                            <div class="dropdown">
                                <button id="addOpportunityType" class="dropdown-button"><span id="dropdown-title-addOpportunityType">  Select Type... </span><i class="fa fa-angle-right" id="dropdown-arrow-addOpportunityType"></i></button>
                                <div id="addOpportunityTypeOptions" class="dropdown-content">
                                    <!--Will dynmaically add options here-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row_52_5p">
                        <div class="row_20p subTitle3"> Coordinator Information</div>
                        <div class="row_40p"> 
                            <div class="col_50p"> 
                                <input class="textInput" type="text" placeholder="Name" id="addOpportunity-coordinatorName">
                            </div>
                            <div class="col_50p"> 
                                <input class="textInput" type="text" placeholder="Email" id="addOpportunity-coordinatorEmail">
                            </div>
                        </div>
                        <div class="row_40p"> 
                            <input class="textInput" type="text" placeholder="Phone Number" id="addOpportunity-coordinatorPhoneNumber">
                        </div>
                    </div>
                </div>

              </div>
              <div class="popup-buttons">
                  <div class="popup-buttons-cancel"><button class="button" id="cancelOpportunityChoice">Cancel</button></div>
                  <div class="popup-buttons-add"><button class="button" id="addOpportunityChoice">Add</button></div>
              </div>
          </div>
        </div>


        <!-- Pop up box for viewing volunteer involvement in oppourtunity -->
        <div id="viewVolunteerInvolvementPopup" class="popup-greyOut" style="display:none">
            <div class="popup-box">
                <div class="popup-title" >
                    <h1 id="volunteerInvolvement-name">Volunteer Name</h1>
                </div>
                <div class="popup-content" style="height: 175px">
                    
                    <div class="col_50p row_100p">
                        <div class="row_65p">
                            <div class="row_30p text-center paddingRight10 subTitle3">Time</div>
                            <div class="row_70p">
                                <div class="row_100p col_50p paddingRight10">
                                    <input class="textInput" type="text" placeholder="Start" id="viewInvolvement-startTime">
                                </div>
                                <div class="row_100p col_50p paddingLeft10">
                                    <input class="textInput" type="text" placeholder="End" id="viewInvolvement-endTime">
                                </div>
                            </div>
                        </div>
                        <div class="row_35p">
                            <div class="col_40p row_100p subTitle3 paddingRight25">Validated</div>
                            <div class="col_60p row_100p">
                                <div class="sliderContainer sliderWidth">
                                    <input type="range" min="0" max="1" value="0" class="slider" id="viewInvolvement-validated">
                                </div>
                                <div class="sliderLabel marginLeft5" id="viewInvolvement-validatedLabel">No</div>
                            </div>
                        </div>  
                    </div>
                    <div class="col_50p row_100p">
                        <div class="row_65p">
                            <div class="row_30p text-center paddingRight10 subTitle3">Duration</div>
                            <div class="row_70p">
                                <input class="textInput" type="text" placeholder="Duration" id="viewInvolvement-duration">
                            </div>
                        </div>
                        <div class="row_35p">
                            <div class="col_40p row_100p subTitle3 paddingRight25">Occurred</div>
                            <div class="col_60p row_100p">
                                <!-- NOTE: this slider will not be editable by the admin user - only depends on date and time of event
                                            will need to manually edit this value in the js data handling                               -->
                                <div class="sliderContainer sliderWidth"> 
                                    <input type="range" min="0" max="1" value="0" class="slider" id="viewInvolvement-occurred">
                                </div>
                                <div class="sliderLabel marginLeft5" id="viewInvolvement-occurredLabel">No</div>
                            </div>
                        </div>  
                    </div>

                </div>
                <div class="popup-buttons">
                    <div class="popup-buttons-cancel"><button class="button" id="closeVolunteerInvolvement">Close</button></div>
                    <div class="popup-buttons-add"><button class="button" id="saveVolunteerInvolvement">Add</button></div>
                </div>
            </div>
        </div>


        <!-- Pop up box for logging out -->
        <div id="logoutPopup" class="popup-greyOut" style="display:none">
        <div class="logout-popup">
            <div class="logout-content subTitle2">
                Are you sure you want to logout?
            </div>
            <div class="logout-buttons">
                <div class="popup-buttons-cancel"><button class="button" id="cancelLogoutChoice">Cancel</button></div>
                <div class="popup-buttons-add"><button class="button" id="yesLogoutChoice">Yes</button></div>
            </div>
        </div>
        </div>

    </div>

  </body>
  
</html>