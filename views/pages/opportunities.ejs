<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Style Sheets -->
    <link rel="stylesheet" href="../css_files/general.css"> 
    <link rel="stylesheet" href="../css_files/opportunties.css">
    <link rel="stylesheet" href="../css_files/components.css"> 
    <link rel="stylesheet" href="../css_files/myDatepicker.css">

    <!-- Font Awesome 6-->
    <script src="https://kit.fontawesome.com/30087e3184.js" crossorigin="anonymous"></script>

    <!-- Scripts -->
    <script src="../js_files/opportunities.js"></script>
    <script src="../js_files/slider.js"></script>
    <script src="../js_files/dropdown.js"></script>
    <script src="../js_files/general.js"></script>
    <script src="../js_files/logout.js"></script>
    <script src="../js_files/myDatepicker.js"></script>


    <!-- Page Title -->
    <title>Hands On Deck - Oppourtunties</title>

  </head>

  <body onload="init()">

    <!--Add navigation bar-->
    <%- include ("../partials/nav.ejs") %>

    <div class="pageContainer">

        <!-- View all opportunities -- Initial screen for opportunities page -->
        <div id="opportunitiesMainPage">
            <div class="addOppButton">
            <button class="button" id="addOpportunityButton">Add Opportunity</button>
            </div>

            <div class="searchOpportunity paddingTop5 search">
                <input class="textInput" placeholder="Search" id="searchopportunities">
            </div>

            <div class="sortOpportunity">
                <div class="sliderLabel" id="oppTimeFrameLabel">Present</div>
                <div class="sliderContainer sliderWidth">
                    <input type="range" min="0" max="2" value="1" class="slider" id="oppTimeFrame">
                </div>
            </div>

            <div id="oppourtuntiesTableDiv" class="table"> 
                <span class="table-title">Opportunities:</span>
                <table id="oppourtuntiesTable"> 
                    <tr>
                        <th class="width30">Title</th>
                        <th class="width20">Type</th>
                        <th class="width15">Number of Volunteers</th>
                        <th class="width15">Date</th> 
                        <th class="width10">Time</th> 
                        <th class="width5">View</th>
                        <th class="width5">Delete</th> 
                    </tr>
                </table>
            </div>
        </div>


        <!-- View Oppourtunity Page -- Shown when user clicks to view a specific oppourtunity-->
        <div id="viewOpportunityPage" class="row_100p" style="display:none">
            <div id="viewVolunteersForOpportunityHeader" class="row_30p">
                <div class="row_10p">
                    <div class="col_33p subTitle2 text-center">Title</div>
                    <div class="col_33p subTitle2 text-center">Start</div>
                    <div class="col_33p subTitle2 text-center">End</div>
                </div>
                <div class="row_20p">
                    <div class="col_33p blackDisplayField text-center" id="viewOpportunity-title">Opportunity Title</div>
                    <div class="col_33p blackDisplayField text-center" id="viewOpportunity-startTime">3:00pm 27/08/2020</div>
                    <div class="col_30p blackDisplayField text-center" id="viewOpportunity-endTime">4:00pm 27/08/2020</div>
                </div>
                <div class="row_20p">
                    <div class="col_10p subTitle2"> </div>
                    <div class="col_10p subTitle2 paddingTop5">Type:</div>
                    <div class="col_30p blackDisplayField paddingTop5" id="viewOpportunity-type">Student engagement</div>
                    <div class="col_30p subTitle2 paddingTop5" style="text-align:right;">Volunteer Limit:</div>
                    <div class="col_15p blackDisplayField" style="text-align:left; padding-bottom: 5p" id="viewOpportunity-volLimit">15</div>
                </div>
                <div class="row_20p">
                    <div class="col_12_5p subTitle2 paddingTop5">Viewable By:</div>
                    <div class="col_33p blackDisplayField" id="viewOpportunity-viewableBy">Teams</div>
                    <div class="col_25p subTitle2 paddingTop5">Coordinator Information:</div>
                    <div class="col_25p blackDisplayField" id="viewOpportunity-coordinatorName">Name</div>
                </div>
                <div class="row_20p">
                    <div class="col_15p subTitle2"></div>
                    <div class="col_30p subTitle2"></div>
                    <div class="col_25p blackDisplayField" id="viewOpportunity-coordinatorEmail">Email</div>
                    <div class="col_25p blackDisplayField" id="viewOpportunity-coordinatorPhone">Phone #</div>
                </div>
                <div class="row_10p"></div>
            </div>
                
            <div id="viewVolunteersForOpportunityTableDiv" class="table"> 
                <span class="table-title">Volunteers:</span>
                <table id="viewVolunteersForOpportunityTable"> 
                    <tr>
                        <th class="width25">Name</th>
                        <th class="width25">Email</th>
                        <th class="width25">Team</th>
                        <th class="width20">Hours</th> 
                        <th class="width5">View</th> 
                    </tr>
                </table>
            </div>

            <button id="returnToOppListButt" class="button" style="width:20%"> Return to Opportunities</button>
        </div>

        


        <!-- Pop up box for adding opportunities -->
        <div id="addOpportunityPopup" class="popup-greyOut" style="display:none">
          <div class="popup-box">
              <div class="popup-title" >
                  <h1>Add Opportunity</h1>
              </div>
              <div class="popup-content">
                  
                <div class="col_50p row_100p">
                  <div class="row_25p">
                    <div class="col_25p subTitle2"> Title:</div>
                    <div class="col_75p"> 
                      <input class="textInput" type="text" placeholder="Title" id="addOpportunity-title">
                    </div>
                  </div>
                  <div class="row_25p">
                    <div class="col_25p subTitle2"> Date:</div>
                    <div class="col_75p"> 
                      <input class="textInput" type="text" placeholder="YYYY-MM-DD" id="addOpportunity-date">
                      <div id="addOpportunityDatePicker" class="hideDP" style="z-index:10"></div>
                    </div>
                  </div>
                  <div class="row_25p">
                    <div class="col_25p subTitle2"> Time:</div>
                    <div class="col_37p">
                      <input class="textInput" type="text" placeholder="Start Time" id="addOpportunity-startTime">
                    </div>
                    <div class="col_37p">
                      <input class="textInput" type="text" placeholder="End Time" id="addOpportunity-endTime">
                    </div>
                  </div>
                  <div class="row_25p">
                    <div class="col_25p subTitle2"> Type:</div>
                    <div class="col_75p"> 
                      <div class="dropdown">
                        <button id="addOpportunityType" class="dropdown-button"><span id="dropdown-title-addOpportunityType">  Select Type... </span><i class="fa fa-angle-right" id="dropdown-arrow-addOpportunityType"></i></button>
                        <div id="addOpportunityTypeOptions" class="dropdown-content">
                          <!--Will dynmaically add options here-->
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="col_50p row_100p">
                  <div class="row_25p">
                    <div class="col_33p subTitle2"> Viewable By:</div>
                    <div class="col_66p"> 
                      <div class="dropdown">
                        <button id="addOpportunityViewableBy" class="dropdown-button"><span id="dropdown-title-addOpportunityViewableBy">  All Teams</span><i class="fa fa-angle-right" id="dropdown-arrow-addOpportunityViewableBy"></i></button>
                        <div id="addOpportunityViewableByOptions" class="dropdown-content">
                          <!--Will dynmaically add options here-->
                          <a id="addOpportunityViewableByOptions_option_0" class="dropdown-option">All Teams</a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row_25p">
                    <div class="col_33p subTitle2"> Volunteer Limit:</div>
                    <div class="col_66p"> 
                      <div class="sliderContainer sliderWidth">
                        <input type="range" min="0" max="15" value="15" class="slider" id="addOpportunityVolunteerLimit">
                      </div>
                      <div class="sliderLabel marginLeft5" id="addOpportunityVolunteerLimitLabel">No Limt</div>
                    </div>
                  </div>
                  <div class="row_50p">
                    <div class="row_20p subTitle2"> Coordinator Information</div>
                    <div class="row_40p"> 
                      <div class="col_50p"> 
                        <input class="textInput" type="text" placeholder="Name" id="addOpportunity-coordinatorName">
                      </div>
                      <div class="col_50p"> 
                        <input class="textInput" type="text" placeholder="Email" id="addOpportunity-coordinatorEmail">
                      </div>
                    </div>
                    <div class="row_40p"> 
                      <input class="textInput" type="text" placeholder="Phone Number" id="addOpportunity-coordinatorPhoneNumber">
                    </div>
                  </div>
                </div>

              </div>
              <div class="popup-buttons">
                  <div class="popup-buttons-cancel"><button class="button" id="cancelOpportunityChoice">Cancel</button></div>
                  <div class="popup-buttons-add"><button class="button" id="addOpportunityChoice">Add</button></div>
              </div>
          </div>
        </div>

        <!-- Pop up box for logging out -->
        <div id="logoutPopup" class="popup-greyOut" style="display:none">
        <div class="logout-popup">
            <div class="logout-content subTitle">
                Are you sure you want to logout?
            </div>
            <div class="logout-buttons">
                <div class="popup-buttons-cancel"><button class="button" id="cancelLogoutChoice">Cancel</button></div>
                <div class="popup-buttons-add"><button class="button" id="yesLogoutChoice">Yes</button></div>
            </div>
        </div>
        </div>

    </div>

  </body>
  
</html>