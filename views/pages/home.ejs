<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Style Sheets -->
    <link rel="stylesheet" href="../css_files/general.css"> 
    <link rel="stylesheet" href="../css_files/main.css"> 
    <link rel="stylesheet" href="../css_files/components.css"> 

    <!-- Font Awesome 6-->
    <script src="https://kit.fontawesome.com/30087e3184.js" crossorigin="anonymous"></script>

    <!-- Scripts -->
    <script src="../js_files/home.js"></script>
    <script src="../js_files/logout.js"></script>
    <script src="../js_files/d3.js"></script>

    <!-- Page Title -->
    <title>Hands On Deck - Home</title>

  </head>



  <body onload="init()">

    <%- include ("../partials/nav.ejs") %>

      <!--Volunteer % pie chart-->
    <div id="home-welcome">
      <div class="home-title">
        <span class="title">Welcome!</span>
      </div>

      <div id="numberOfVolunteersPieChart" class="svg-container" style="height:200px">
        Pie Chart Goes Here
      </div>

      <div class="home-subTitle">
        <div class="subTitle paddingBottom10">Active: <span class="resultText" id="numActiveVolunteers">##</span></div> <br>
        <div class="subTitle paddingBottom10">Inactive: <span class="resultText" id="numInactiveVolunteers">##</span></div> <br>
      </div>
    </div>


    <!--Volunteer hours pie chart-->
    <div id="home-institution">
      <div class="home-title"> 
        <span class="title">Institution: <br> <span class="resultText" id="institutionName">Hands On Deck University</span> </span>
      </div>

      <div id="volunteerHoursPieChart" class="svg-container" style="height:200px">
        Pie Chart Goes Here
      </div>

      <div class="home-subTitle">
        <div class="subTitle paddingBottom10">Goal: <span class="resultText" id="volunteerHoursGoal">##</span></div> <br>
        <div class="subTitle paddingBottom10">Current Progress: <span class="resultText" id="volunteerHoursTotal">##</span></div> <br>
      </div>
    </div>

    
    <!-- Pop up box for logging out -->
    <div id="logoutPopup" class="popup-greyOut" style="display:none">
      <div class="logout-popup">
          <div class="logout-content subTitle">
              Are you sure you want to logout?
          </div>
          <div class="logout-buttons">
              <div class="popup-buttons-cancel"><button class="button" id="cancelLogoutChoice">Cancel</button></div>
              <div class="popup-buttons-add"><button class="button" id="yesLogoutChoice">Yes</button></div>
          </div>
      </div>
    </div>


    
    <!-- Load React. -->
    <!-- Note: when deploying, replace "development.js" with "production.min.js". -->
    <script src="https://unpkg.com/react@16/umd/react.development.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom@16/umd/react-dom.development.js" crossorigin></script>

    <!-- Add React js scripts here -->
  </body>
</html>