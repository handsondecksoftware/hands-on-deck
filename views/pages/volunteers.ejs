                <td><i class="fas fa-eye table-view" onclick="showVolunteer()"></i></td>
                <td><i class="fa fa-trash table-view" onclick="deleteVolunteer()"></i></td>
              </tr>
          </table>
        </div>
      
      </div>
      
      <!-- Used to show the volunteer history of volunteer -->
      <div id="viewVolunteerPage" style="display: none;">
        
        <div id="volunteerHistoryTitle">

            <div class="col_33p row_100p">
                <div class="row_50p">
                    <div class="col_100p subTitle2"> Name:</div>
                </div>
                <div class="row_50p">
                    <div id="volName" class="subTitle2"></div>
                </div>
            </div>

            <div class="col_33p row_100p">
                <div class="row_50p">
                    <div class="col_100p subTitle2"> Team:</div>
                </div>
                <div class="row_50p">
                    <div id="volTeam" class="subTitle2"></div>
                </div>
            </div>

            <div class="col_33p row_100p">
                <div class="row_50p">
                    <div class="col_100p subTitle2"> Role:</div>
                </div>
                <div class="row_50p">
                    <div class="col_100p subTitle2">
                      <input class="textInput" type="text" placeholder="Role" id="volunteerInfo-team">
                    </div>
                </div>
            </div>

        </div>

        <div id="volunteerHistoryTableDiv" class="table"> 
          <span class="table-title">Volunteer History:</span>
          <table id="volunteerHistoryTable"> 
            <tr>
              <th class="width35">Title</th>
              <th class="width20">Type</th>
              <th class="width15">Number of Hours</th>
              <th class="width15">Date</th> 
