<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Style Sheets -->
    <link rel="stylesheet" href="../css_files/general.css"> 
    <link rel="stylesheet" href="../css_files/volunteers.css">
    <link rel="stylesheet" href="../css_files/navBar.css"> 
    <link rel="stylesheet" href="../css_files/table.css"> 
    <link rel="stylesheet" href="../css_files/popup.css">
    <link rel="stylesheet" href="../css_files/button.css">
    <link rel="stylesheet" href="../css_files/textInput.css">

    <!-- Font Awesome 6-->
    <script src="https://kit.fontawesome.com/30087e3184.js" crossorigin="anonymous"></script>

    <!-- Scripts -->
    <script src="../js_files/volunteers.js"></script>
    <script src="../js_files/slider.js"></script>
    <script src="../js_files/logout.js"></script>

    <!-- Page Title -->
    <title>Hands On Deck - Volunteers</title>

  </head>

  <body onload="init();">

    <!--Add navigation bar-->
    <%- include ("../partials/nav.ejs") %>

    <div class="pageContainer"> 

      <div id="volunteerMainPage">

        <div style="height: 60px">  <!-- Define height of top section to avoid spacing issues with text above table-->
          <div class="addVolunteerButton">
            <button class="button" id="addVolunteerButton">Add Volunteer</button>
          </div>
    
          <div class="searchVolunteer paddingTop5 search">
            <input class="textInput" type="text" placeholder="Search" id="searchVolunteers">
          </div>
        </div>

        <!-- Displays list of volunteers-->
        <div id="volunteersTableDiv" class="table"> 
          <span class="table-title">Volunteers:</span>
          <table id="volunteersTable"> 
            <tr>
              <th class="table-volunteers_name">Name</th>
              <th class="table-volunteers_email">Email</th>
              <th class="table-volunteers_team">Team</th>
              <th class="table-volunteers_Vhrs">Volunteer Hours</th> 
              <th class="table-volunteers_view">View</th>
            </tr>
            <tr>
              <td>Ryan Stolys</td>
              <td>rstolys@sfu.ca</td> 
              <td>Men's Golf</td>
              <td>23</td>
              <td><i class="fas fa-eye table-view" id="viewVolunteerButton"></i></td> 
            </tr>
            <tr>
              <td>Jayden Cole</td>
              <td>jcole@sfu.ca</td> 
              <td>Men's Swimming</td>
              <td>25</td>
              <td><i class="fas fa-eye table-view" id="viewVolunteerButton"></i></td> 
            </tr>
          </table>
        </div>
      
      </div>
      

      <div id="viewVolunteerPage" style="display: none;">
        <!-- Used to show the volunteer history of volunteer-->
        <div id="volunteerHistoryTitle">

            <div class="col_33p row_100p">
                <div class="row_50p">
                    <div class="col_100p subTitle2"> Name:</div>
                </div>
                <div class="row_50p">
                  <div class="col_50p subTitle2">
                    <input class="textInput" type="text" placeholder="First" id="volunteerInfo-firstName">
                  </div>
                  <div class="col_50p subTitle2">
                    <input class="textInput" type="text" placeholder="Last" id="volunteerInfo-lastName">
                  </div>
                </div>
            </div>

            <div class="col_33p row_100p">
                <div class="row_50p">
                    <div class="col_100p subTitle2"> Team:</div>
                </div>
                <div class="row_50p">
                    <div class="col_100p subTitle2">
                      <input class="textInput" type="text" placeholder="Team" id="volunteerInfo-team">
                    </div>
                </div>
            </div>

            <div class="col_33p row_100p">
                <div class="row_50p">
                    <div class="col_100p subTitle2"> Role:</div>
                </div>
                <div class="row_50p">
                    <div class="col_100p subTitle2">
                      <input class="textInput" type="text" placeholder="Role" id="volunteerInfo-team">
                    </div>
                </div>
            </div>

        </div>

        <div id="volunteerHistoryTableDiv" class="table"> 
          <span class="table-title">Volunteer History:</span>
          <table id="volunteerHistoryTable"> 
            <tr>
              <th class="table-oppourtunity_title">Title</th>
              <th class="table-oppourtunity_type">Type</th>
              <th class="table-oppourtunity_numVol">Number of Hours</th>
              <th class="table-oppourtunity_date">Date</th> 
              <th class="table-oppourtunity_time">Time</th> 
              <th class="table-oppourtunity_view">View</th>
            </tr>
            <tr>
              <td>Operation Christmas Child</td>
              <td>Local Community</td> 
              <td>2.5</td>
              <td>Nov. 23, 2020</td>
              <td>6:30 PM</td>
              <td><i class="fas fa-eye table-view"></i></td> 
            </tr>
            <tr>
              <td>Special Olympics</td>
              <td>Local Community</td> 
              <td>1.25</td>
              <td>Nov. 24, 2020</td>
              <td>7:30 PM</td>
              <td><i class="fas fa-eye table-view"></i></td> 
            </tr>
          </table>
        </div> 
        <button class="button col_16p" style="width: 30%;" id="returnToVolList"> Return to Volunteers</button>
        
      </div>


  
      <!-- Pop up box for adding volunteers -->
      <div id="volunteerOppourtunityPopup" class="popup-greyOut" style="display:none">
        <div class="popup-box">
            <div class="popup-title" >
                <h1 id="oppourtunityTitle">Volunteer Information</h1>
            </div>
            <div class="popup-content">
                
                <div class="col_50p row_100p">
                    <div class="row_16p">
                        <div class="col_100p subTitle2"> Name:</div>
                    </div>
                    <div class="row_16p">
                      <div class="col_50p subTitle2">
                        <input class="textInput" type="text" placeholder="First" id="volunteerInfo-firstName">
                      </div>
                      <div class="col_50p subTitle2">
                        <input class="textInput" type="text" placeholder="Last" id="volunteerInfo-lastName">
                      </div>
                    </div>
                    <div class="row_16p">
                      <div class="col_30p subTitle2"> Email:</div>
                      <div class="col_70p subTitle2">
                        <input class="textInput" type="text" placeholder="Email" id="volunteerInfo-email">
                      </div>
                    </div>
                    <div class="row_16p"></div>
                    <div class="row_16p subTitle2"> or Upload Roster(.csv):</div>
                    <div class="row_16p"></div>
                </div>

                <div class="col_50p row_100p">
                    <div class="row_16p">
                        <div class="col_100p subTitle2"> Team:</div>
                    </div>
                    <div class="row_16p">
                        <div class="col_100p subTitle2">
                          <input class="textInput" type="text" placeholder="Email" id="volunteerInfo-team">
                        </div>
                    </div>
                    <div class="row_16p">
                        <div class="col_30p subTitle2"> Role:</div>
                        <div class="col_70p subTitle2">
                          <input class="textInput" type="text" placeholder="Role" id="volunteerInfo-role">
                        </div>
                    </div>
                    <div class="row_16p"></div>
                    <div class="row_16p">
                        <button class="button" type="submit"> Choose File</button>
                    </div>
                    <div class="row_16p"></div>
                </div>
            </div>

            <div class="popup-buttons">
                <div class="popup-buttons-cancel"><button class="button" id="cancelVolunteerOppourtunityChoice">Cancel</button></div>
                <div class="popup-buttons-add"><button class="button" id="saveVolunteerOppourtunityChoice">Save</button></div>
            </div>
        </div>
      </div>


      <!-- Pop up box for logging out -->
      <div id="logoutPopup" class="popup-greyOut" style="display:none">
        <div class="logout-popup">
            <div class="logout-content subTitle">
                Are you sure you want to logout?
            </div>
            <div class="logout-buttons">
                <div class="popup-buttons-cancel"><button class="button" id="cancelLogoutChoice">Cancel</button></div>
                <div class="popup-buttons-add"><button class="button" id="yesLogoutChoice">Yes</button></div>
            </div>
        </div>
      </div>

    </div>

    <!-- Specific volunteer viewer page -->
    <div id="volunteerViewerPage" style="display: none;">


    </div>

    <!-- Load React. -->
    <!-- Note: when deploying, replace "development.js" with "production.min.js". -->
    <script src="https://unpkg.com/react@16/umd/react.development.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom@16/umd/react-dom.development.js" crossorigin></script>

    <!-- Add React js scripts here -->
  </body>
  
</html>