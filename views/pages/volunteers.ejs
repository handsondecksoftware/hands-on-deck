            </tr>
          </table>
        </div> 
        <button class="button col_16p" style="width: 30%;" id="returnToVolList"> Return to Volunteers</button>
        
      </div>
  
      <!-- Pop up box for adding volunteers -->
      <form action="addVolunteer" method="post">
      <div id="addVolunteerPopup" class="popup-greyOut" style="display:none">
        <div class="popup-box">
            <div class="popup-title" >
                <h1 id="oppourtunityTitle">Volunteer Information</h1>
            </div>
            <div class="popup-content">
                
                <div class="col_50p row_100p">
                    <div class="row_16p">
                        <div class="col_100p subTitle2"> Name:</div>
                    </div>
                    <div class="row_16p">
                      <div class="col_50p subTitle2">
                        <input class="textInput" type="text" placeholder="First" id="volunteerInfo-firstName" name="firstName" required>
                      </div>
                      <div class="col_50p subTitle2">
                        <input class="textInput" type="text" placeholder="Last" id="volunteerInfo-lastName" name="lastName" required>
                      </div>
                    </div>
                    <div class="row_16p">
                      <div class="col_30p subTitle2"> Email:</div>
                      <div class="col_70p subTitle2">
                        <input class="textInput" type="text" placeholder="Email" id="volunteerInfo-email" required>
                      </div>
                    </div>
                    <div class="row_16p"></div>
                    <div class="row_16p subTitle2"> or Upload Roster(.csv):</div>
                    <div class="row_16p"></div>
                </div>

                <div class="col_50p row_100p">
                    <div class="row_16p">
                        <div class="col_100p subTitle2"> Team:</div>
                    </div>
                    <div class="row_16p">
                        <div class="col_100p subTitle2">
                          <input class="textInput" type="text" placeholder="Team" id="volunteerInfo-team" required>
                        </div>
                    </div>
                    <div class="row_16p">
                        <div class="col_30p subTitle2"> Role:</div>
                        <div class="col_70p subTitle2">
                          <input class="textInput" type="text" placeholder="Role" id="volunteerInfo-role" >
                        </div>
                    </div>
                    <div class="row_16p"></div>
                    <div class="row_16p">
                        <button class="button" type="button"> Choose File</button>
                    </div>
                    <div class="row_16p"></div>
                </div>
            </div>

            <div class="popup-buttons">
                <div class="popup-buttons-cancel"><button type="button" class="button" id="cancelVolunteerOppourtunityChoice">Cancel</button></div>
                <div class="popup-buttons-add"><button type="submit" class="button" id="saveVolunteerOppourtunityChoice">Save</button></div>
            </div>
        </div>
      </div>
    </form>

      <!-- Pop up box for viewing an opportunity that a volunteer has participated in-->
      <div id="viewOppourtunityDetailsPopup" class="popup-greyOut" style="display:none">
        <div class="popup-box2">
            <div class="popup-title" >
                <h1 id="opportunityTitle">Opportunity Title</h1>
            </div>
            <div class="popup-content" style="height: 70%;">

                <div class="col_50p row_100p">
                    <div class="row_20p">
                        <div class="col_50p subTitle2"> Date:</div>
                        <div class="col_50p subTitle2"> Time:</div>
                    </div>
                    <div class="row_33p">
                      <div class="col_50p subTitle2">
                        <input class="textInput" type="text" placeholder="Date" id="oppDate">
                      </div>
                      <div class="col_50p subTitle2">
                        <input class="textInput" type="text" placeholder="Time" id="oppTime">
                      </div>
                    </div>
                    <div class="row_33p">
                      <div class="col_35p subTitle2"> Validated:</div>
                      <div class="col_65p subTitle2">
                        <div class="sliderLabel" id="oppValidatedLabel">Yes</div>
                        <div class="sliderContainer sliderWidth">
                            <input type="range" min="0" max="1" value="0" class="slider" id="oppValidated">
                        </div>
                      </div>
                    </div>
                </div>

                <div class="col_50p row_100p">
                    <div class="row_20p">
                        <div class="col_100p subTitle2"> Duration:</div>
                    </div>
                    <div class="row_33p">
                        <div class="col_100p subTitle2">
                          <input class="textInput" type="text" placeholder="Duration" id="volunteerInfo-team">
                        </div>
                    </div>
                    <div class="row_33p">
                        <div class="col_35p subTitle2"> Occurred:</div>
                        <div class="col_65p">
                            <div class="sliderLabel" id="oppOccurredLabel">Yes</div>
                            <div class="sliderContainer sliderWidth">
                                <input type="range" min="0" max="1" value="0" class="slider" id="oppOccurred">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="popup-buttons">
                <div class="popup-buttons-cancel"><button class="button" id="cancelOppourtunityView">Cancel</button></div>
                <div class="popup-buttons-add"><button class="button" id="saveOppourtunityView">Save</button></div>
            </div>
        </div>
      </div>

      <!-- Pop up box for logging out -->
      <div id="logoutPopup" class="popup-greyOut" style="display:none">
        <div class="logout-popup">
            <div class="logout-content subTitle">
                Are you sure you want to logout?
            </div>
            <div class="logout-buttons">
                <div class="popup-buttons-cancel"><button class="button" id="cancelLogoutChoice">Cancel</button></div>
                <div class="popup-buttons-add"><button class="button" id="yesLogoutChoice">Yes</button></div>
            </div>
        </div>
      </div>

    </div>

